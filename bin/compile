#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# Fail immediately on non-zero exit code.
set -e
# Fail immediately on non-zero exit code within a pipeline.
set -o pipefail
# Fail on undeclared variables.
set -u
# Debug, echo every command
#set -x

function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}

BUILD_DIR="$1"
CACHE_DIR="$2"
ENV_DIR="$3"

if [ ! -f "${ENV_DIR}/APP_BASE" ]; then
    echo "APP_BASE was not set. Aborting" | indent
    exit 1
fi

APP_BASE="$(cat "${ENV_DIR}/APP_BASE")"
SUB_COMMAND="$(cat "${ENV_DIR}/APP_BASE_COMMAND")"


(
    cd "${BUILD_DIR}/${APP_BASE}" && "${SUB_COMMAND}"
)

echo "Bootstraped root and ran command in ${APP_BASE} to successfully" | indent

